<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/card_inside_padding">


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/manual_match_fragment_linear_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#444444"
                android:alpha=".7"
                android:id="@+id/manual_match_fragment_content_hero_view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/PlaylistHeroStyle"
                android:id="@+id/manual_match_fragment_content_hero_text"/>

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/manual_match_fragment_linear_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/manual_match_fragment_content_title"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />

        <TextView
            android:id="@+id/manual_match_fragment_content_sub_title"
            style="@style/SubTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2" />

    </LinearLayout>

</RelativeLayout>
