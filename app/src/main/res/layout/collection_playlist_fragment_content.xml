<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/card_inside_padding">


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/collection_playlist_fragment_linear_layout">

        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:background="#232323"
            android:alpha=".7"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="54dp"
            android:layout_height="3dp"
            android:background="#333333"
            android:alpha=".7"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/collection_playlist_fragment_content_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/collection_playlist_fragment_linear_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collection_playlist_fragment_content_title"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />

        <TextView
            android:id="@+id/collection_playlist_fragment_content_sub_title"
            style="@style/SubTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2" />

    </LinearLayout>

</RelativeLayout>
