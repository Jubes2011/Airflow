<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginBottom="@dimen/five_dp_margin"
    android:layout_marginTop="@dimen/five_dp_margin"
    app:cardElevation="1dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/collection_playlist_fragment_content_big_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/black"
            android:alpha=".7"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="92dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="82dp"
                    android:layout_height="3dp"
                    android:background="#232323"
                    android:alpha=".7"
                    android:layout_gravity="center_horizontal"/>

                <View
                    android:layout_width="88dp"
                    android:layout_height="3dp"
                    android:background="#333333"
                    android:alpha=".7"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/collection_playlist_fragment_content_small_image"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/card_inside_padding">

            <TextView
                android:id="@+id/collection_playlist_fragment_content_title"
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <TextView
                android:id="@+id/collection_playlist_fragment_content_sub_title"
                style="@style/SubTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2" />

        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>