<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/five_dp_margin"
    android:layout_marginTop="@dimen/five_dp_margin">


    <RelativeLayout
        android:layout_height="270dp"
        app:layout_widthPercent="50%">

        <ImageView
            android:id="@+id/search_artist_fragment_content_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/card_inside_padding">

            <TextView
                android:id="@+id/search_artist_fragment_content_title"
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />


        </LinearLayout>

    </RelativeLayout>


</android.support.percent.PercentRelativeLayout>